<div id="assignments">
 <header>
    <h2 id="date"><%= l Date.today %></h2>
    <p id="task-count">
      <%= @assignments.count %> Assignments
    </p>
    <%= render 'form', assignment: Assignment.new %>
  </header>
  <section id="list">
      <% @assignments.each do |assignment| %>
        <%= render assignment %>
      <% end %>
  </section>
</div>
